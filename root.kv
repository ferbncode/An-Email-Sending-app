#:import sys sys
<MainScreen>:
	#hey i am inherited from the Boxlayout 
	orientation:'vertical'
	Image:
		source:'../Pictures/ferb_fletcher_by_senajsivart-d48xoeg.png'
		size_hint_y:0.9

	Button:
		text:'Enter'
		size_hint_y:0.1
		on_press:root.next_screen()
<NewScreen>:
	orientation:'vertical'
	canvas:
		Ellipse:
			
	BoxLayout:
		size_hint_y:0.1
		Button:
			text:'Back'
			size_hint_x:0.3
			on_press:root.prev_screen()
		
		Button:
			text:'LOG IN TO THE GMAIL ACCOUNT'
			size_hint_x:0.7
			on_press:root.loginScreen()
	Image:
		source:'../Download_1036899.jpg'
<LogInScreen>:
	orientation:'vertical'
	padding:30
	spacing:20
	BoxLayout:
		orientation:'vertical'
		padding:80
		spacing:50	
		size_hint_y:0.99
		BoxLayout:
			Label:
				text:'Gmail Id:'
				size_hint_x:0.4
			TextInput:
				id:email_id
				size_hint_y:0.4
				multiline:False
		BoxLayout:
			Label:
				text:'Password'
				size_hint_x:0.4
			TextInput:
				password:True
				size_hint_y:0.4
				id:password
				multiline:False
	Button:
		size_hint_y:0.1
		text:'Log In'
		on_press:root.loggedin()
<Send_Email>:
	orientation:'vertical'
	padding:40
	spacing:20
	TextInput:
		text:'reciever\'s email'
		id:reciever
		size_hint_y:0.4
		size_hint_x:0.7
	TextInput:
		text:'Subject'
		id:subject
		size_hint_y:0.4
		size_hint_x:0.7
	TextInput:
		text:'Body'
		id:body
		size_hint_y:0.8
		size_hint_x:0.7
	Button:
		text:'Send'
		size_hint_x:0.4
		size_hint_y:0.3
		on_press:root.send_email()
	BoxLayout:
		size_hint_y:0.1
		Label:
			text:'Sent'
		CheckBox:
			id:checkbox
			active:False
	Button:
		size_hint_y:0.3
		size_hint_x:0.4
		text:'Quit'
		on_press:sys.exit()
		
			
MainScreen:
